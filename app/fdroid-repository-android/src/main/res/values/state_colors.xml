<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateDefinition">
    <!--
        Convention to translate html-css-class 'state_xxxx' to colors:
        bg_xxx=background; fg_xxx=foreground.
        if there is no color definition (ie state_disabled) then standard colors are used.
    -->
    <color name="bg_state_enabled">#08A508</color>
    <color name="bg_state_error">#FF9800</color>
    <color name="bg_state_busy">#FAE104</color>

    <color name="fg_state_enabled">#FF000000</color>
    <color name="fg_state_error">#FF000000</color>
    <color name="fg_state_busy">#FF000000</color>
</resources>